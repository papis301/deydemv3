<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Bottom Sheet Style Uber -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_material_bottomsheet"
        android:elevation="12dp"
        android:clipToPadding="false">

        <!-- PICKUP -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPickupLabel"
            android:text="Point de départ"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickup"
            android:text="Choisir lieu de récupération"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPickup"
            android:text="Aucun lieu choisi"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- DROP-OFF -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDropLabel"
            android:text="Destination"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDropoff"
            android:text="Choisir lieu de dépôt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDropoff"
            android:text="Aucun lieu choisi"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- DISTANCE -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDistance"
            android:text="Distance : -"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- VEHICLE TYPE -->
        <com.google.android.material.textview.MaterialTextView
            android:text="Type de véhicule"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/spinnerVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choisir un véhicule"
            android:padding="12dp"
            android:background="@drawable/bg_m3_field"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true" />




        <!-- PRICE -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPrice"
            android:text="Prix : 0 FCFA"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- CONFIRM BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:text="Confirmer la livraison"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/materialButtonStyle" />
    </LinearLayout>

</FrameLayout>
